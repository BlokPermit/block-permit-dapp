// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Investor {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  streetAddress String
  phoneNumber   String
  email         String
  taxId         String   @unique
  project       Project? @relation(fields: [projectId], references: [id])
  projectId     String?  @db.ObjectId
}

model Project {
  id                             String       @id @default(auto()) @map("_id") @db.ObjectId
  smartContractAddress           String       @unique
  constructionTitle              String
  constructionImpactsEnvironment Boolean
  constructionType               String
  projectState                   ProjectState @default(AQUIRING_PROJECT_CONDITIONS)
  createdAt                      Int
  investors                      Investor[]
}

model User {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  email            String         @unique
  phone            String?
  streetAddress    String
  walletAddress    String         @unique
  userType         UserType
  projectAddresses String[]
  notifications    Notification[]
}

type Notification {
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
  content   String?
  projectId String   @db.ObjectId
}

enum UserType {
  ADMIN
  ASSESSMENT_PROVIDER
  PROJECT_MANAGER
  ADMINISTRATIVE_AUTHORITY
}

enum ProjectState {
  AQUIRING_PROJECT_CONDITIONS
  AQUIRING_PROJECT_OPINIONS
  AQUIRING_BUILDING_PERMIT
}
