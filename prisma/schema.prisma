// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                             Int        @id @default(autoincrement())
  investors                      Investor[]
  contactName                    String
  contactEmail                   String
  contactPhone                   String
  legalBodyName                  String
  legalBodyAddress               String
  constructionTitle              String
  constructionImpactsEnvironment Boolean
  constructionType               String
  documentUrl                    String?
}

model Investor {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  taxId     String
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  address  String
  userRole UserRole
}

enum UserRole {
  PROJECT_MANAGER
  OPINION_PROVIDER
  ADMINISTRATIVE_AUTHORITY
}
