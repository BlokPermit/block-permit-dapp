// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                             Int                     @id @default(autoincrement())
  smartContractAddress           String
  constructionTitle              String
  constructionImpactsEnvironment Boolean
  constructionType               String
  documentUrls                   String[]
  investments                    Investment[]
  ProjectManager                 ProjectManager          @relation(fields: [projectManagerId], references: [id])
  projectManagerId               Int
  AdministrativeAuthority        AdministrativeAuthority @relation(fields: [administrativeAuthorityId], references: [id])
  administrativeAuthorityId      Int
  OpinionProvider                OpinionProvider         @relation(fields: [opinionProviderId], references: [id])
  opinionProviderId              Int
}

model User {
  id                      Int                      @id @default(autoincrement())
  name                    String
  email                   String                   @unique
  phone                   String?
  streetAddress           String
  walletAddress           String
  ProjectManager          ProjectManager?
  OpinionProvider         OpinionProvider?
  AdministrativeAuthority AdministrativeAuthority?
}

model ProjectManager {
  id      Int       @id @default(autoincrement())
  user    User      @relation(fields: [userId], references: [id])
  userId  Int       @unique
  Project Project[]
}

model OpinionProvider {
  id      Int       @id @default(autoincrement())
  user    User      @relation(fields: [userId], references: [id])
  userId  Int       @unique
  Project Project[]
}

model AdministrativeAuthority {
  id      Int       @id @default(autoincrement())
  user    User      @relation(fields: [userId], references: [id])
  userId  Int       @unique
  Project Project[]
}

model Investment {
  id         Int      @id @default(autoincrement())
  Investor   Investor @relation(fields: [investorId], references: [id])
  investorId Int
  Project    Project? @relation(fields: [projectId], references: [id])
  projectId  Int?
  amount     Decimal
}

model Investor {
  id            Int          @id @default(autoincrement())
  name          String
  streetAddress String
  taxId         String
  investments   Investment[]
}
